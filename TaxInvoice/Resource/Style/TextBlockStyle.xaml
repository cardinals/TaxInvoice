<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Resource">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resource;component/Style/FontSizeStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <!--基本的文本样式-->
    <Style x:Key="BaseContentTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource ContentFontSize}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <!--水平居右的文本样式-->
    <Style x:Key="H_R_ContentTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseContentTextBlockStyle}">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>
    <!--水平居右的文本样式-->
    <Style x:Key="H_C_ContentTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseContentTextBlockStyle}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>